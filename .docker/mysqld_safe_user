mkdir -p /tmp/mysqld
SOCK_FILE=${MYSQL_HOME}/mysql.${MYSQL_PORT}.sock
nohup mysqld_safe --datadir=${MYSQL_DATA_DIR} --pid-file=${MYSQL_HOME}/mysql-server.${MYSQL_PORT}.pid --port=${MYSQL_PORT} --socket=${SOCK_FILE} --log-error=${MYSQL_LOGS_DIR}/mysql-${MYSQL_PORT}-console.err --tmpdir=/tmp/mysqld --skip-syslog $@ &> /dev/null &
sleep 1
